<h1>Users</h1>
<!--book indexページ右側-->
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format:'jpg', fallback:"no_image.jpg", size:"40x40" %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!--左側-->
<!--User info-->
<%= render 'users/info', user: @user %>


<!--New book-->
<%= render 'books/newbook', book_new: @book_new %>