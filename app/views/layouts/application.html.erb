<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-taggler" type="button" date-taggle="collapse" date-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-togger-icon"></span>
          </button>
          
          <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li>
                <%= link_to "Home", user_path(current_user.id) %>
              </li>
              <li>
                <%= link_to "Users", users_path(current_user.id) %>
              </li>
              <li>
                <%= link_to "Books", books_path %>
              </li>
              <li>
                <%= link_to "logout", destroy_user_session_path, method: :delete %>
              </li>
            <% else %>
              <li>
                <%= link_to "Home", "/" %>
              </li>
              <li>
                <%= link_to "About", "/homes/about" %>
              </li>
              <li>
                <%= link_to "sing up", new_user_registration_path %>
              </li>
              <li>
                <%= link_to "login", new_user_session_path %>
              </li>
            <% end %>
            </ul>
            
          </div>
        </div>
      </nav>
    </header>
    
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>

    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
